<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_tam_1"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewDriverOnWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_tam_2"
        android:textColor="@android:color/black"
        android:text="..."
        android:layout_marginBottom="@dimen/margin_tam_2"/>

    <Button
        android:id="@+id/buttonBackToMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVoltar"
        android:backgroundTint="@color/azul"/>
</LinearLayout>
